<Window x:Class="WpfApp1.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="False"
        Width="350" Height="760"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Storyboard x:Key="SlideIn">
            <DoubleAnimation Storyboard.TargetName="RootPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.4"/>
            <ThicknessAnimation Storyboard.TargetName="RootPanel"
                                Storyboard.TargetProperty="Margin"
                                From="0,20,0,-20" To="0,0,0,0"
                                Duration="0:0:0.4">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>

        <!-- Glass panel style reused for badges/cards -->
        <Style x:Key="GlassPanel" TargetType="Border">
            <Setter Property="Background" Value="#18FFFFFF"/>
            <Setter Property="BorderBrush" Value="#30FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- Compact glass panel -->
        <Style x:Key="GlassPanelSm" TargetType="Border">
            <Setter Property="Background" Value="#14FFFFFF"/>
            <Setter Property="BorderBrush" Value="#28FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="10,8"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Background: deep cosmic gradient -->
        <Border CornerRadius="20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F00A0A1A" Offset="0"/>
                    <GradientStop Color="#F0110D2E" Offset="0.45"/>
                    <GradientStop Color="#F0080820" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#5B21B6" BlurRadius="45" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>
        </Border>

        <!-- Decorative orb top-right -->
        <Ellipse Width="180" Height="180"
                 HorizontalAlignment="Right" VerticalAlignment="Top"
                 Margin="0,-60,-60,0" Opacity="0.07">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#7C3AED" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Decorative orb bottom-left -->
        <Ellipse Width="140" Height="140"
                 HorizontalAlignment="Left" VerticalAlignment="Bottom"
                 Margin="-50,0,0,-50" Opacity="0.06">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#3B82F6" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>

        <!-- Main glass card -->
        <Border x:Name="RootPanel" CornerRadius="20" Margin="8" Opacity="0">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#45FFFFFF" Offset="0"/>
                    <GradientStop Color="#08FFFFFF" Offset="0.6"/>
                    <GradientStop Color="#35A855F7" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>
            <Border.Background>
                <SolidColorBrush Color="Transparent"/>
            </Border.Background>

            <Grid Margin="18,16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,14">
                    <StackPanel>
                        <TextBlock x:Name="lblWelcome" Text="Welcome!"
                                   Foreground="White" FontSize="20" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <Ellipse Width="6" Height="6" Fill="#7C3AED" Margin="0,0,6,0"
                                     VerticalAlignment="Center"/>
                            <TextBlock Text="Dashboard"
                                       Foreground="#AA7C3AED" FontSize="11"/>
                        </StackPanel>
                    </StackPanel>
                    <Button Content="âœ•"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Width="26" Height="26" FontSize="11"
                            Foreground="#60FFFFFF" Background="Transparent"
                            BorderThickness="0" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>

                <!-- Notification Badge -->
                <Border Grid.Row="1" Style="{StaticResource GlassPanelSm}"
                        Margin="0,0,0,8" Cursor="Hand"
                        MouseLeftButtonDown="NotifBadge_Click">
                    <Border.Effect>
                        <DropShadowEffect Color="#7C3AED" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ””" FontSize="13" Margin="0,0,8,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Notifications"
                                       Foreground="#CCFFFFFF" FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border x:Name="badgeUnread"
                                CornerRadius="10" MinWidth="22" Height="22"
                                HorizontalAlignment="Right" Padding="6,2"
                                Visibility="Collapsed">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FFEF4444" Offset="0"/>
                                    <GradientStop Color="#FFDC2626" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#EF4444" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                            </Border.Effect>
                            <TextBlock x:Name="lblUnreadCount" Text="0"
                                       Foreground="White" FontSize="11" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Email Badge -->
                <Border Grid.Row="2" Style="{StaticResource GlassPanelSm}"
                        Margin="0,0,0,12" Cursor="Hand"
                        MouseLeftButtonDown="EmailBadge_Click">
                    <Border.Effect>
                        <DropShadowEffect Color="#3B82F6" BlurRadius="8" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <Grid>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="âœ‰" Foreground="#FF3B82F6" FontSize="14"
                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="lblEmailStatus" Text="Inbox"
                                       Foreground="#CCFFFFFF" FontSize="12"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                        <Border x:Name="badgeEmailUnread"
                                CornerRadius="10" MinWidth="22" Height="22"
                                HorizontalAlignment="Right" Padding="6,2"
                                Visibility="Collapsed">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF3B82F6" Offset="0"/>
                                    <GradientStop Color="#FF1D4ED8" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#3B82F6" BlurRadius="8" ShadowDepth="0" Opacity="0.8"/>
                            </Border.Effect>
                            <TextBlock x:Name="lblEmailUnreadCount" Text="0"
                                       Foreground="White" FontSize="11" FontWeight="Bold"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Stats Cards -->
                <Grid Grid.Row="3" Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total -->
                    <Border Grid.Column="0" CornerRadius="12" Padding="10,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#25A855F7" Offset="0"/>
                                <GradientStop Color="#107C3AED" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#50A855F7" Offset="0"/>
                                <GradientStop Color="#20A855F7" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect Color="#7C3AED" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="lblTotal" Text="0"
                                       Foreground="#FFA855F7" FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Total" Foreground="#80FFFFFF" FontSize="10"
                                       HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Done -->
                    <Border Grid.Column="2" CornerRadius="12" Padding="10,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#2022C55E" Offset="0"/>
                                <GradientStop Color="#1016A34A" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#5022C55E" Offset="0"/>
                                <GradientStop Color="#2022C55E" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect Color="#22C55E" BlurRadius="10" ShadowDepth="0" Opacity="0.3"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="lblDone" Text="0"
                                       Foreground="#FF22C55E" FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Done" Foreground="#80FFFFFF" FontSize="10"
                                       HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Pending -->
                    <Border Grid.Column="4" CornerRadius="12" Padding="10,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#22FBBF24" Offset="0"/>
                                <GradientStop Color="#10D97706" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#50FBBF24" Offset="0"/>
                                <GradientStop Color="#20FBBF24" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Border.BorderThickness>1</Border.BorderThickness>
                        <Border.Effect>
                            <DropShadowEffect Color="#FBBF24" BlurRadius="10" ShadowDepth="0" Opacity="0.25"/>
                        </Border.Effect>
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock x:Name="lblPending" Text="0"
                                       Foreground="#FFFBBF24" FontSize="24" FontWeight="Bold"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Pending" Foreground="#80FFFFFF" FontSize="10"
                                       HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Add Todo -->
                <Grid Grid.Row="4" Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="txtNewTodo" Grid.Column="0"
                             Style="{StaticResource WidgetTextBox}"
                             Margin="0,0,8,0"
                             KeyDown="TxtNewTodo_KeyDown"/>
                    <Button Grid.Column="1" Content="ï¼‹"
                            Style="{StaticResource PrimaryButton}"
                            Padding="14,8" FontSize="16"
                            Click="BtnAddTodo_Click"/>
                </Grid>

                <!-- Todo List -->
                <Border Grid.Row="5" CornerRadius="12" Padding="5" Margin="0,0,0,6"
                        Background="#12FFFFFF" BorderBrush="#20FFFFFF" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstTodos">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="10" Padding="10,8" Margin="3,2"
                                            Background="#18FFFFFF" BorderBrush="#25FFFFFF"
                                            BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <CheckBox Grid.Column="0"
                                                      IsChecked="{Binding IsCompleted}"
                                                      Click="TodoCheckbox_Click"
                                                      VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Grid.Column="1" Text="{Binding Title}"
                                                       Foreground="#EEFFFFFF" FontSize="12"
                                                       VerticalAlignment="Center" TextWrapping="Wrap">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                                <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                                <Setter Property="Foreground" Value="#50FFFFFF"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <Button Grid.Column="2" Content="âœ•"
                                                    Style="{StaticResource DangerButton}"
                                                    Click="BtnDeleteTodo_Click"
                                                    Padding="6,4" FontSize="10"
                                                    VerticalAlignment="Center" Margin="6,0,0,0"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Notifications Panel -->
                <Border x:Name="notifPanel" Grid.Row="6"
                        CornerRadius="12" Padding="8" Margin="0,0,0,6"
                        Background="#12FFFFFF" BorderBrush="#20FFFFFF" BorderThickness="1"
                        Visibility="Collapsed" MaxHeight="130">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstNotifications">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="8" Padding="8,6" Margin="2"
                                            Background="#18FFFFFF" BorderBrush="#22FFFFFF"
                                            BorderThickness="1">
                                        <StackPanel>
                                            <Grid>
                                                <TextBlock Text="{Binding Title}"
                                                           Foreground="White" FontSize="12" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ReceivedAt, StringFormat='{}{0:hh:mm tt}'}"
                                                           Foreground="#60FFFFFF" FontSize="10"
                                                           HorizontalAlignment="Right"/>
                                            </Grid>
                                            <TextBlock Text="{Binding Message}"
                                                       Foreground="#AAFFFFFF" FontSize="11"
                                                       TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>

                <!-- Email Panel -->
                <Border x:Name="emailPanel" Grid.Row="7"
                        CornerRadius="12" Padding="10" Margin="0,0,0,6"
                        Background="#12FFFFFF" BorderBrush="#20FFFFFF" BorderThickness="1"
                        Visibility="Collapsed">
                    <StackPanel>
                        <StackPanel x:Name="mailConnectPanel" Visibility="Visible">
                            <TextBlock Text="Enter mail password to connect"
                                       Foreground="#80FFFFFF" FontSize="11" Margin="0,0,0,8"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <PasswordBox x:Name="txtMailPassword"
                                             Grid.Column="0"
                                             Style="{StaticResource WidgetPasswordBox}"
                                             KeyDown="TxtMailPassword_KeyDown"/>
                                <Button x:Name="btnMailConnect"
                                        Grid.Column="2"
                                        Content="Connect"
                                        Style="{StaticResource PrimaryButton}"
                                        Padding="10,7" FontSize="11"
                                        Click="BtnMailConnect_Click"/>
                            </Grid>
                            <TextBlock x:Name="lblMailError"
                                       Foreground="#FFEF4444" FontSize="11"
                                       Margin="0,6,0,0" TextWrapping="Wrap"
                                       Visibility="Collapsed"/>
                        </StackPanel>

                        <StackPanel x:Name="mailListPanel" Visibility="Collapsed">
                            <Grid Margin="0,0,0,8">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Ellipse Width="7" Height="7" Fill="#FF22C55E" Margin="0,0,6,0"/>
                                    <TextBlock x:Name="lblMailConnected" Text="Connected"
                                               Foreground="#FF22C55E" FontSize="11" FontWeight="SemiBold"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                                <Button Content="Disconnect"
                                        HorizontalAlignment="Right"
                                        Background="Transparent" BorderThickness="0"
                                        Foreground="#70FFFFFF" FontSize="10" Cursor="Hand"
                                        Click="BtnMailDisconnect_Click"/>
                            </Grid>
                            <TextBlock x:Name="lblNoMail" Text="No unread mail"
                                       Foreground="#60FFFFFF" FontSize="12"
                                       HorizontalAlignment="Center" Margin="0,4,0,4"
                                       Visibility="Collapsed"/>
                            <Border MaxHeight="120">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="lstEmails">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="8" Padding="8,6" Margin="2"
                                                        Background="#18FFFFFF" BorderBrush="#22FFFFFF"
                                                        BorderThickness="1" Cursor="Hand"
                                                        MouseLeftButtonDown="EmailItem_Click">
                                                    <StackPanel>
                                                        <Grid>
                                                            <TextBlock Text="{Binding From}"
                                                                       Foreground="#FF3B82F6"
                                                                       FontSize="11" FontWeight="SemiBold"
                                                                       TextTrimming="CharacterEllipsis" MaxWidth="180"/>
                                                            <TextBlock Text="{Binding Date, StringFormat='{}{0:MMM dd, hh:mm tt}'}"
                                                                       Foreground="#60FFFFFF" FontSize="10"
                                                                       HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                                        </Grid>
                                                        <TextBlock Text="{Binding Subject}"
                                                                   Foreground="#CCFFFFFF" FontSize="12"
                                                                   TextTrimming="CharacterEllipsis" Margin="0,2,0,0"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Footer -->
                <Grid Grid.Row="8" Margin="0,4,0,0">
                    <TextBlock x:Name="lblLastLogin" Text=""
                               Foreground="#50FFFFFF" FontSize="10"
                               VerticalAlignment="Center"/>
                    <Button Content="Hide" Style="{StaticResource DangerButton}"
                            HorizontalAlignment="Right" Click="BtnLogout_Click"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource SlideIn}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>
