<Window x:Class="WpfApp1.EmailViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Email"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="540" Height="560"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetName="RootCard"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.35"/>
            <ThicknessAnimation Storyboard.TargetName="RootCard"
                                Storyboard.TargetProperty="Margin"
                                From="0,16,0,-16" To="0,0,0,0"
                                Duration="0:0:0.35">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <Grid>
        <!-- Background -->
        <Border CornerRadius="18">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#F00A0A1A" Offset="0"/>
                    <GradientStop Color="#F0110D2E" Offset="0.5"/>
                    <GradientStop Color="#F00D0820" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#3B82F6" BlurRadius="40" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <!-- Glass card -->
        <Border x:Name="RootCard" CornerRadius="18" Margin="8" Opacity="0">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#45FFFFFF" Offset="0"/>
                    <GradientStop Color="#08FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#303B82F6" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>

            <Grid Margin="24">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,14">
                    <TextBlock x:Name="lblSubject"
                               Text="Subject"
                               Foreground="White" FontSize="15" FontWeight="Bold"
                               TextWrapping="Wrap" MaxWidth="450"
                               VerticalAlignment="Center"/>
                    <Button Content="✕"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Width="26" Height="26" FontSize="11"
                            Foreground="#60FFFFFF" Background="Transparent"
                            BorderThickness="0" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>

                <!-- From / Date -->
                <Border Grid.Row="1"
                        CornerRadius="10" Padding="12,10" Margin="0,0,0,12"
                        Background="#18FFFFFF" BorderBrush="#30FFFFFF" BorderThickness="1">
                    <Grid>
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="From: " Foreground="#70FFFFFF" FontSize="11"/>
                                <TextBlock x:Name="lblFrom"
                                           Foreground="#FF3B82F6" FontSize="11" FontWeight="SemiBold"
                                           TextTrimming="CharacterEllipsis" MaxWidth="380"/>
                            </StackPanel>
                            <TextBlock x:Name="lblDate"
                                       Foreground="#60FFFFFF" FontSize="10" Margin="0,4,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Divider -->
                <Border Grid.Row="2" Height="1" Margin="0,0,0,12">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                            <GradientStop Color="Transparent" Offset="0"/>
                            <GradientStop Color="#40FFFFFF" Offset="0.5"/>
                            <GradientStop Color="Transparent" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Body -->
                <Border Grid.Row="3"
                        CornerRadius="10" Padding="14" Margin="0,0,0,14"
                        Background="#12FFFFFF" BorderBrush="#20FFFFFF" BorderThickness="1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <TextBlock x:Name="lblBody"
                                   Foreground="#DDFFFFFF" FontSize="12"
                                   LineHeight="20" TextWrapping="Wrap"
                                   FontFamily="Segoe UI"/>
                    </ScrollViewer>
                </Border>

                <!-- Footer -->
                <Grid Grid.Row="4">
                    <Button x:Name="btnOpenOwa"
                            Content="⬡  Open in Browser (OWA)"
                            HorizontalAlignment="Left"
                            Foreground="White" BorderThickness="1"
                            Padding="14,8" FontSize="12" Cursor="Hand"
                            Click="BtnOpenOwa_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" CornerRadius="10"
                                                    Padding="{TemplateBinding Padding}"
                                                    BorderThickness="1" BorderBrush="#503B82F6">
                                                <Border.Background>
                                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                        <GradientStop Color="#CC1D4ED8" Offset="0"/>
                                                        <GradientStop Color="#CC1E40AF" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <Border.Effect>
                                                    <DropShadowEffect Color="#3B82F6" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                                                </Border.Effect>
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                  TextBlock.Foreground="White" TextBlock.FontSize="12"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="#3B82F6" BlurRadius="18" ShadowDepth="0" Opacity="0.9"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Close"
                            HorizontalAlignment="Right"
                            Foreground="#AAFFFFFF" BorderThickness="0"
                            Padding="14,8" FontSize="12" Cursor="Hand"
                            Click="BtnClose_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="bg" CornerRadius="10"
                                                    Background="#25FFFFFF" BorderBrush="#30FFFFFF"
                                                    BorderThickness="1"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                                  TextBlock.Foreground="#AAFFFFFF" TextBlock.FontSize="12"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="bg" Property="Background" Value="#35FFFFFF"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>
