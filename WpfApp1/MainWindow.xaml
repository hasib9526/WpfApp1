<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widget Login"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        Width="340" Height="400"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">

    <Window.Resources>
        <Storyboard x:Key="EnterAnimation">
            <DoubleAnimation Storyboard.TargetName="RootPanel"
                             Storyboard.TargetProperty="Opacity"
                             From="0" To="1" Duration="0:0:0.5"/>
            <ThicknessAnimation Storyboard.TargetName="RootPanel"
                                Storyboard.TargetProperty="Margin"
                                From="0,30,0,-30" To="0,0,0,0"
                                Duration="0:0:0.5">
                <ThicknessAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </ThicknessAnimation.EasingFunction>
            </ThicknessAnimation>
        </Storyboard>
    </Window.Resources>

    <!-- Outer glow wrapper -->
    <Grid>
        <!-- Deep space background -->
        <Border CornerRadius="18">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#E60A0A1A" Offset="0"/>
                    <GradientStop Color="#E6110D2E" Offset="0.5"/>
                    <GradientStop Color="#E60D0D20" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.Effect>
                <DropShadowEffect Color="#7C3AED" BlurRadius="40" ShadowDepth="0" Opacity="0.35"/>
            </Border.Effect>
        </Border>

        <!-- Glass card -->
        <Border x:Name="RootPanel" CornerRadius="18" Margin="8" Opacity="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#CC0F0F1E" Offset="0"/>
                    <GradientStop Color="#CC1A1030" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#50FFFFFF" Offset="0"/>
                    <GradientStop Color="#10FFFFFF" Offset="0.5"/>
                    <GradientStop Color="#30A855F7" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.BorderThickness>1</Border.BorderThickness>

            <Grid Margin="28">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Title Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,24">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="◈  Desktop Widget"
                                   Foreground="#CCA855F7"
                                   FontSize="16" FontWeight="Bold"
                                   HorizontalAlignment="Center"/>
                        <Border Height="1" Margin="0,6,0,0">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                                    <GradientStop Color="Transparent" Offset="0"/>
                                    <GradientStop Color="#707C3AED" Offset="0.5"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                    </StackPanel>
                    <Button Content="✕"
                            HorizontalAlignment="Right" VerticalAlignment="Top"
                            Width="26" Height="26" FontSize="11"
                            Foreground="#70FFFFFF" Background="Transparent"
                            BorderThickness="0" Cursor="Hand"
                            Click="BtnClose_Click"/>
                </Grid>

                <!-- Login Form -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <TextBlock Text="Sign In"
                               Foreground="White"
                               FontSize="24" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,28"/>

                    <TextBlock Text="USERNAME" Foreground="#80FFFFFF"
                               FontSize="10" FontWeight="SemiBold"
                               Margin="2,0,0,6"/>
                    <TextBox x:Name="txtUsername"
                             Style="{StaticResource WidgetTextBox}"
                             Margin="0,0,0,16"/>

                    <TextBlock Text="PASSWORD" Foreground="#80FFFFFF"
                               FontSize="10" FontWeight="SemiBold"
                               Margin="2,0,0,6"/>
                    <PasswordBox x:Name="txtPassword"
                                 Style="{StaticResource WidgetPasswordBox}"
                                 Margin="0,0,0,24"
                                 KeyDown="TxtPassword_KeyDown"/>

                    <Button x:Name="btnLogin" Content="LOGIN"
                            Style="{StaticResource PrimaryButton}"
                            Click="BtnLogin_Click"
                            Margin="0,0,0,12"
                            FontSize="13" FontWeight="Bold"/>

                    <TextBlock x:Name="lblError"
                               Foreground="#FFEF4444"
                               FontSize="12" HorizontalAlignment="Center"
                               TextWrapping="Wrap"/>

                    <TextBlock x:Name="lblLoading"
                               Text="⟳  Connecting..."
                               Foreground="#AA7C3AED"
                               FontSize="12" HorizontalAlignment="Center"
                               Visibility="Collapsed"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource EnterAnimation}"/>
        </EventTrigger>
    </Window.Triggers>
</Window>
